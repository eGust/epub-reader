*, *:before, *:after
  box-sizing border-box

body
  margin 0
  width 100vw
  height 100vh
  overflow auto

*
  scrollbar-width thin
  scrollbar-color #444 #CCC

  &::-webkit-scrollbar
    width 10px

  &::-webkit-scrollbar-track
    background #CCC

  &::-webkit-scrollbar-thumb
    background-color #444
    border-radius 6px
    border 1px solid #888

#root
  position relative
  display flex
  width 100%
  height 100%

.flex
  display flex
  &.row
    flex-direction row
  &.column
    flex-direction column

.flex-auto
  flex 1

.hide
  display none

.app-bar
  width auto !important
  .title
    max-width calc(95vw - 90px)
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

#reader
  border none
  margin 5px 8px 16px 5px
  padding 0
  flex 1

.reader-wrap
  display flex
  position relative
  overflow hidden

.page-indicator
  position absolute
  width 62%
  height 10px
  left 19%
  bottom 3px
  color white
  border-radius 20px
  opacity 0.4
  display flex
  flex-direction column
  justify-content space-evenly

  .label
    align-self center
    display none

  .scroll-bar
    position relative
    margin 0 20px
    height 8px
    align-self stretch
    border-radius 5px
    overflow hidden
    display flex
    flex-direction row
    align-content stretch
    border 0.5px dotted black
    .scroll-thumb
      background-color black
      flex 1
    .scroll-block
      cursor pointer
      flex 1
      &:hover
        border 0.5px dotted white

  &:hover
    opacity 0.9
    background-color rgba(0, 0, 0, 0.9)
    height 40px
    .label
      opacity 1
      display block
    .scroll-bar
      border none
      background-color #666
    .scroll-thumb
      background-color #eee

ul.toc
  z-index 1
  margin 3px 0
  padding 0 15px 0 5px
  height calc(100% - 5px)
  max-width 40%
  overflow-x hidden
  overflow-y auto
  background-color #eee
  font-size 11pt

  li
    list-style none
    cursor default
    color #222
    span
      display inline-flex
      align-content center
      align-items center
      white-space nowrap
    .title
      margin 0 6px
      &.selected
        color green
    .count
      font-size 80%
      color blue
      &::before
        content: '['
      &::after
        content: ']'
    .link
      cursor pointer
      &:hover
        color deepskyblue !important

    &.selected > .item .link
      color green;

  ul
    padding-left 24px
