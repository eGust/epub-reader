*, *:before, *:after
  box-sizing border-box

body
  position absolute
  top 0
  right 0
  bottom 0
  left 0

  margin 0
  padding 5px 15px
  display flex
  background-color beige
  overflow hidden

  scrollbar-width thin
  scrollbar-color #444 #CCC

  &::-webkit-scrollbar
    width 10px

  &::-webkit-scrollbar-track
    background #CCC

  &::-webkit-scrollbar-thumb
    background-color #444
    border-radius 6px
    border 1px solid #888

  & > main
    position relative
    flex 1
    overflow hidden

    & > section
      position absolute
      height 100%
      column-fill auto
      text-align left
      column-width 450px
      column-gap 10px
      width 480px
      overflow visible
      left calc(0px - (480px + 10px) * var(--page-no, 0))

@media (min-width 480px)
  body > main > section
    left calc(0px - (100% + 3vw) * var(--page-no, 0))
    width 100%
    column-width 95vw
    column-gap 3vw

    svg, img
      max-width 95vw
      margin auto

@media (min-width 992px)
  body > main > section
    column-width 40vw

    svg, img
      max-width 40vw
      margin auto
